{
  // "extends": "tslint:recommended",
  "rules": {
      "semicolon":false,
      "quotemark": [
        true,
        "single"
      ],
      "max-line-length": {
          "options": [180]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "no-console": {
          "severity": "warning",
          "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
      }
  },
  "jsRules": {
      "max-line-length": {
          "options": [180]
      }
  }
}